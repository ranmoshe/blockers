{
  "manifest_version": 2,
  "name": "Site Blocker",
  "version": "1.0",
  "description": "Blocks certain sites",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
